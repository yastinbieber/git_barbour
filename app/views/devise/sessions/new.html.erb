<div class="row py-5">
  <div class="col-md-6 col-md-offset-6 mx-auto text-center">
    <div class="card mx-auto text-left">
      <h2 class="card-header">管理者ログイン</h2>
      <div class="card-body">
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group has-primary">
          <%= f.label :email, class: "bmd-label-floating" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      
        <div class="form-group has-primary">
          <%= f.label :password, class: "bmd-label-floating" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %><br>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <%= f.submit "ログインする", class: "btn btn-primary btn-raised" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>