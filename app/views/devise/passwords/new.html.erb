<div class="row py-5">
  <div class="col-md-6 col-md-offset-6 mx-auto text-center">
    <div class="card mx-auto text-left">
      <h2 class="card-header">パスワードをお忘れの方</h2>
      <div class="card-body">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="form-group">
          <%= f.label :email, class: "bmd-label-floating" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
          <%= f.submit "送信する", class: "btn btn-primary btn-raised" %>
      <% end %>
      
      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>