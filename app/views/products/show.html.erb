<div class="container">
  <div class="row my-5">
    <div class="col-md-8">
      <div class="card ">
        <div class="col-md-12">
          <div class="mx-auto text-center">
            <div class="container-search-result-box" title="<%= @product.title %>">
              <% if @product.image.attached? %>
                <%= image_tag @product.image %>
              <% end %>
            </div>
            <div class="text-left">
              <h2 class="py-5"><%= @product.title %></h2>
              <h4>¥<%= @product.price %>-</h4>
              <%= link_to "購入画面へ", "#{@product.linkurl}", class: "btn btn-raised btn-primary", target: "_blank" %>
            </div>
            
          </div>
        </div>
      </div>
      <div class="text-right">
        <%= link_to '編集', "/products/#{@product.id}/edit", method: :get, class: "btn btn-raised btn-primary" %>
        <%= link_to '削除', "/products/#{@product.id}", method: :delete, class: "btn btn-raised btn-danger" %>
      </div>
    </div>
    <div class="col-md-4 text-center">
      <%= render 'blogs/blogs' %>
      <%= render 'products/products' %>
      <%= render 'users/users' %>
    </div>
  </div>
</div>