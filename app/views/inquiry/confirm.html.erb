<div class="container">
  <div class="row my-5">
    <div class="col-md-8">
  	<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
    	<h2>お問い合わせ内容の確認</h2>
    	<hr>
  	  <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <form>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                  	<%= f.hidden_field :name %>
                    <label class="bmd-label-floating">Name</label>
                    <h5 class="form-control"><%= @inquiry.name %></h5>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                  	<%= f.hidden_field :email %>
                    <label class="bmd-label-floating">Email</label>
                    <h5 class="form-control"><%= @inquiry.email %></h5>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                  	<%= f.hidden_field :message %>
                    <label class="bmd-label-floating">Message</label>
                    <h5 class="form-control"><%= simple_format(@inquiry.message) %></h5>
                  </div>
                </div>
              	<div class="clearfix"></div>
              </div>
            </form>
          </div>
        </div>
    		<%= f.submit '送信', :class => 'btn btn-primary' %>
      </div>
  	<% end %>
  	</div>
  	<div class="col-md-4 text-center">
      <%= render 'blogs/blogs' %>
      <%= render 'products/products' %>
      <%= render 'users/users' %>
    </div>
	</div>
</div>