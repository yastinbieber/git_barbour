<div class="container">
  <div class="row my-5">
    <div class="col-md-8">
      <div class="card card-nav-tabs">
        <div class="card-header card-header-tabs card-header-primary">
          <div class="nav-tabs-navigation">
            <div class="nav-tabs-wrapper">
              <h4 class="nav-tabs-title">
                記事を投稿する
              </h4>
            </div>
          </div>
        </div>
        <div class="card-body">
        <%= form_for(@bio) do |f| %>
          <div class="form-group">
            <span><%= f.label :image, "画像アップロード(サムネイル)：" %></span><br>
            <%= f.file_field :image %>
            <small class="text-danger">投稿する画像は『224*126』の対比だとキレイに表示されます</small><br><br>
          </div>
          <div class="form-group">
            <span><%= f.label :title, "title：" %></span><br>
            <%= f.text_field :title, placeholder: "title", class: 'form-control', required: true %><br>
          </div>
          <div class="form-group">
            <span><%= f.label :text, "text：" %></span><br>
            <%= f.text_area :text, placeholder: "text", :size=>"60x10", class: 'form-control', required: true %>
          </div>
          <%= f.submit "投稿する", class: "btn btn-raised btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4 text-center">
      <%= render 'blogs/blogs' %>
      <%= render 'products/products' %>
      <%= render 'users/users' %>
    </div>
  </div>
</div>